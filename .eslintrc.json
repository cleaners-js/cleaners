{
  "extends": [
    "standard-kit/prettier",
    "standard-kit/prettier/flow",
    "standard-kit/prettier/typescript"
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "plugins": ["simple-import-sort"],
  "rules": {
    "import/extensions": ["error", "always"],
    "simple-import-sort/imports": "error"
  }
}
