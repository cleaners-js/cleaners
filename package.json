{
  "name": "as-cleaned",
  "version": "0.1.0",
  "private": true,
  "description": "Cleans & validates untrusted data, with TypeScript & Flow support",
  "repository": "https://www.github.com/swansontec/as-cleaned",
  "license": "MIT",
  "author": "William Swanson",
  "main": "lib/index.cjs.js",
  "module": "lib/index.js",
  "scripts": {
    "build.lib": "rollup -c",
    "build.types": "tsc",
    "clean": "rimraf lib",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ext .js,.ts .",
    "prepare": "npm-run-all clean -p build.*",
    "start": "node -r sucrase/register src/index.ts",
    "test": "nyc mocha -r sucrase/register 'test/**/*.test.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test && yarn prepare"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": ">=2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-eslint": ">=10.0.0",
    "chai": "^4.2.0",
    "eslint": ">=6.2.2",
    "eslint-config-standard-kit": ">=0.14.4",
    "eslint-plugin-flowtype": ">=4.3.0",
    "eslint-plugin-import": ">=2.18.0",
    "eslint-plugin-prettier": ">=3.0.0",
    "eslint-plugin-promise": ">=4.2.1",
    "eslint-plugin-simple-import-sort": ">=4.0.0",
    "eslint-plugin-standard": ">=4.0.0",
    "husky": ">=3.0.0",
    "lint-staged": ">=9.0.0",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": ">=1.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.31.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-flow-entry": "^0.3.3",
    "sucrase": "^3.10.1",
    "typescript": "^3.7.2"
  }
}
