{
  "name": "cleaners",
  "version": "0.2.0",
  "description": "Cleans & validates untrusted data, with TypeScript & Flow support",
  "keywords": [
    "conversion",
    "json",
    "validation"
  ],
  "repository": "https://www.github.com/swansontec/cleaners",
  "license": "MIT",
  "author": "William Swanson",
  "files": [
    "/CHANGELOG.md",
    "/lib/*",
    "/package.json",
    "/README.md",
    "/src/*"
  ],
  "main": "lib/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "build.flow": "flow",
    "build.lib": "rollup -c; cp src/index.js.flow lib",
    "build.types": "tsc",
    "clean": "rimraf lib",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ext .js,.ts .",
    "prepare": "npm-run-all clean -p build.*",
    "test": "nyc mocha 'test/**/*.test.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test && yarn prepare"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard-kit": "^0.14.4",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "eslint-plugin-standard": "^4.0.1",
    "flow-bin": "^0.122.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.0",
    "rollup-plugin-filesize": "^7.0.0",
    "sucrase": "^3.13.0",
    "typescript": "^3.8.3"
  }
}
